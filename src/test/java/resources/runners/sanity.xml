<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Suite" verbose="1">
    <groups>
        <run>
            <include name="sanity"></include>

        </run>
    </groups>
    <listeners>
        <listener class-name="com.nopcommerce.demo.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Sanity Test">
        <classes>
            <class name="com.nopcommerce.demo.testsuite.HomePageTest"/>
            <class name="com.nopcommerce.demo.testsuite.ElectronicTest"/>
            <class name="com.nopcommerce.demo.testsuite.ComputerTest1"/>
            <class name="com.nopcommerce.demo.testsuite.ComputerTest"/>
        </classes>
    </test>
</suite>